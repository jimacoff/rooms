<h1>Listing bookings</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Day</th>
      <th>Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.product.title %></td>
        <td><%= booking.day %></td>
        <td><%= booking.time %></td>
        <% if session[:user_id] %>
        <td><%= link_to 'Show', booking %></td>
        <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
        <td><%= link_to 'Cancel', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

